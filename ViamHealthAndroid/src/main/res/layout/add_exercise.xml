<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#D9D9D9">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/newval_main_layout"
        android:background="@drawable/inviteuser_header"
        android:gravity="center_vertical"
        >

        <TextView  android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add Exercise"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:id="@+id/heading"
            android:textColor="#32B5E5"/>



    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/newval_main_layout"
        android:gravity="center_vertical"
        >

    <Spinner
        android:id="@+id/exercise_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="right"
        android:entries="@array/exercise_list"
        android:prompt="@string/exercise_type_prompt"
       />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/newval_main_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txt_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="Enter Time"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:background="@drawable/edt_bg"
            android:singleLine="true"
            android:padding="5dp"
            android:inputType="number"/>

        <Spinner
            android:id="@+id/time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:background="#000000"
            android:inputType="number"
            android:textColor="#000000"
            android:entries="@array/time_type"
            android:prompt="@string/enter_time"
            android:textColorHint="#000000"/>


    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/newval_main_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txt_calories"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="Calories"
            android:inputType="number"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:background="@drawable/edt_bg"
            android:singleLine="true"
            android:padding="5dp"/>

        <Button
            android:id="@+id/interval_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculate"
            android:visibility="gone"
            android:gravity="center"
            android:entries="@array/time_type"
            android:prompt="@string/enter_time" />

    </LinearLayout>
    <LinearLayout android:id="@+id/newval_btn_layout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inviteuser_btn_toggle"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_weight="1"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/btnSave"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Add"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/inviteuser_btn_toggle"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>