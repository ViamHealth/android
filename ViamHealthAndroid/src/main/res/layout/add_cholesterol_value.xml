<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddWeightValue" 
    android:orientation="vertical">
    <FrameLayout 
    android:id="@+id/main_layout"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
     <LinearLayout 
        android:id="@+id/actionbarlayot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
      <!-- Action Bar Start -->
       
	
	  <!-- Action Bar End -->
	    	
  <!-- date layout -->
  <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/inviteuser_header"
        android:gravity="center_vertical">
        
        <TextView android:id="@+id/lbl_add_goal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add Cholesterol Reading"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="#32B5E5"/>
  	 </LinearLayout>
     <LinearLayout
            android:id="@+id/newval_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inviteuser_bg"
           >
 <LinearLayout
            android:id="@+id/newval_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
         
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout 
                     android:id="@+id/btn_time_picker"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
		                <TextView android:id="@+id/lbl_newval_time"
		                    android:layout_height="wrap_content"
		                    android:layout_width="wrap_content"
		                    android:text="10:45AM"
		                     android:textColor="#000000"
		                    android:textSize="12sp"/>
		                 <ImageView
		                      android:paddingLeft="5dp"
		                        android:layout_height="wrap_content"
		                        android:layout_width="wrap_content"
		                        android:src="@drawable/picker_bg"/>
                 </LinearLayout>
                  <LinearLayout 
                      android:id="@+id/btn_date_picker"
                      android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp">
		       
		                 <TextView android:id="@+id/lbl_newval_date"
		                    android:layout_height="wrap_content"
		                    android:layout_width="wrap_content"
		                    android:text="20 March 2013"
		                     android:textColor="#000000"
		                    android:textSize="12sp"
		                    />
		                 <ImageView 
		                     	android:paddingLeft="5dp"
		                        android:layout_height="wrap_content"
		                        android:layout_width="wrap_content"
		                        android:src="@drawable/picker_bg"
		                       />
                 </LinearLayout>
            </LinearLayout>
        </LinearLayout>
  <!-- date layout end -->
  
  <!-- value layout start -->
   <ScrollView 
     android:layout_width="fill_parent"
     android:layout_height="0dp"
	android:layout_weight="1"
     android:splitMotionEvents="false"
     android:fadingEdgeLength="0dp"
     android:layout_gravity="center_horizontal">
  <LinearLayout android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/newval_mid_layout"
            android:layout_width="fill_parent"
            android:orientation="vertical">
			    
						            <LinearLayout android:layout_height="wrap_content"
						                android:layout_width="fill_parent"
						                android:id="@+id/mid_layout">
						                 
							            <LinearLayout 
							                android:id="@+id/newval_submid_layout"
							                android:layout_height="wrap_content"
							                android:layout_width="fill_parent"
							                android:orientation="vertical"
							              
							                >
							                 
											  <LinearLayout 
							                        android:id="@+id/blood_presure_layout"
									                android:layout_height="wrap_content"
									                android:layout_width="fill_parent"
									                android:orientation="vertical">
									                   <TextView 
									                            android:id="@+id/lbl_hdl"
									                            android:layout_height="wrap_content"
											                    android:layout_width="fill_parent"
											                    android:text="HDL"
											                    android:layout_gravity="center_vertical"
											                    android:textSize="15sp"
											                     android:textColor="#000000"
											                    
											                    />
									                 <LinearLayout android:layout_height="wrap_content"
									                     android:layout_width="fill_parent"
									                     android:orientation="horizontal">
									                    <SeekBar
							                                android:id="@+id/seekbar_bar_hdl"
							                                style="?android:attr/progressBarStyleHorizontal"
							                                android:layout_width="wrap_content"
							                                android:layout_height="wrap_content"
							                                android:layout_weight="1"
							                                android:maxHeight="9dp"
							                                android:minHeight="9dp"
							                                android:max="61"
							                                android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_light"
							                                android:thumb="@drawable/scrubber_control_selector_holo_light" />
											                  
											                  <TextView 
											                      android:id="@+id/lbl_hdl_number"
											                      android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="0"
											                       android:textColor="#000000"
											                      android:textSize="25sp"
											                      />
											                   <TextView android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="mg/dL"
											                       android:textColor="#000000"
											                      android:textSize="10sp"
											                      />
									                  </LinearLayout>
									                   <TextView 
									                       		android:id="@+id/lbl_ldl"
									                       		android:layout_height="wrap_content"
											                    android:layout_width="fill_parent"
											                    android:text="LDL"
											                    android:layout_gravity="center_vertical"
											                    android:textSize="15sp"
											                     android:textColor="#000000"
											                    
											                    />                  
											                 <LinearLayout android:layout_height="wrap_content"
									                     android:layout_width="fill_parent"
									                     android:orientation="horizontal">
									                    <SeekBar
							                                android:id="@+id/seekbar_bar_ldl"
							                                style="?android:attr/progressBarStyleHorizontal"
							                                android:layout_width="wrap_content"
							                                android:layout_height="wrap_content"
							                                android:layout_weight="1"
							                                android:maxHeight="9dp"
							                                android:minHeight="9dp"
							                                android:max="191"
							                                 android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_light"
							                                android:thumb="@drawable/scrubber_control_selector_holo_light" />
											                  
											                  <TextView 
											                      android:id="@+id/lbl_ldl_number"
											                      android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="0"
											                      android:textSize="25sp"
											                       android:textColor="#000000"
											                      />
											                   <TextView android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="mg/dL"
											                       android:textColor="#000000"
											                      android:textSize="10sp"
											                      />
									                  </LinearLayout>
									                   <TextView 
									                       		android:id="@+id/lbl_triglyceriders"
									                       		android:layout_height="wrap_content"
											                    android:layout_width="fill_parent"
											                    android:text="Triglycerides"
											                    android:layout_gravity="center_vertical"
											                    android:textSize="15sp"
											                     android:textColor="#000000"
											                   
											                    />
									                 <LinearLayout android:layout_height="wrap_content"
									                     android:layout_width="fill_parent"
									                     android:orientation="horizontal">
									                    <SeekBar
							                                android:id="@+id/seekbar_bar_triglycerides"
							                                style="?android:attr/progressBarStyleHorizontal"
							                                android:layout_width="wrap_content"
							                                android:layout_weight="1"
							                                android:layout_height="wrap_content"
							                               android:maxHeight="9dp"
							                                android:minHeight="9dp"
							                                android:max="501"
							                                 android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_light"
							                                android:thumb="@drawable/scrubber_control_selector_holo_light" />
											                  
											                  <TextView 
											                      android:id="@+id/lbl_trigly_number"
											                      android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="0"
											                      
											                      android:textSize="25sp"
											                       android:textColor="#000000"
											                      />
											                   <TextView android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="mg/dL"
											                      android:textSize="10sp"
											                       android:textColor="#000000"
											                      />
									                  </LinearLayout>   
									                   <TextView 
									                       		android:id="@+id/lbl_total"
									                       		android:layout_height="wrap_content"
											                    android:layout_width="fill_parent"
											                    android:text="Total Cholesterol"
											                    android:layout_gravity="center_vertical"
											                    android:textSize="15sp"
											                     android:textColor="#000000"
											                   
											                    />
									                 <LinearLayout android:layout_height="wrap_content"
									                     android:layout_width="fill_parent"
									                     android:orientation="horizontal">
									                    <SeekBar
							                                android:id="@+id/seekbar_bar_total"
							                                style="?android:attr/progressBarStyleHorizontal"
							                                android:layout_width="wrap_content"
							                                android:layout_weight="1"
							                                android:layout_height="wrap_content"
							                               android:maxHeight="9dp"
							                                android:minHeight="9dp"
							                                android:max="251"
							                                 android:progressDrawable="@drawable/scrubber_progress_horizontal_holo_light"
							                                android:thumb="@drawable/scrubber_control_selector_holo_light" />
											                  
											                  <TextView 
											                      android:id="@+id/lbl_total_number"
											                      android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="0"
											                      
											                      android:textSize="25sp"
											                       android:textColor="#000000"
											                      />
											                   <TextView android:layout_height="wrap_content"
											                      android:layout_width="wrap_content"
											                      android:text="mg/dL"
											                      android:textSize="10sp"
											                       android:textColor="#000000"
											                      />
									                  </LinearLayout>   
									                  </LinearLayout>
									                
							            </LinearLayout>
			          </LinearLayout>
			      
		       
  </LinearLayout>
  
  </ScrollView>
  </LinearLayout>
  <!-- value layout end -->
  
  <!--Button layout start  -->
     <LinearLayout android:id="@+id/newval_btn_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                      
                      
				      <TextView 
				          android:id="@+id/btnCancle"
				          android:layout_width="wrap_content"
			  	         android:layout_height="wrap_content"
			  	         android:background="@drawable/inviteuser_btn_toggle"
			  	         android:gravity="center"
			  	         android:text="Cancel"
			  	         android:textSize="17sp"
			  	         android:textColor="#cdcdcd"
			  	         android:textStyle="bold" />
                <TextView
                          android:id="@+id/btnSave"
                        android:layout_height="wrap_content"
			  	         android:layout_width="wrap_content"
			  	         android:text="Add"
			  	         android:textColor="#cdcdcd"
			  	         android:background="@drawable/inviteuser_btn_toggle"
			  	         android:textStyle="bold"
			  	         android:textSize="17sp"
			  	         android:gravity="center"/>
            </LinearLayout>
  <!--Button layout end  -->
  
   </LinearLayout>
           
       </FrameLayout>
    
</LinearLayout>