<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".File"
    android:background="#EFEFEF"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <!-- Action Bar Start -->
        <LinearLayout
            android:id="@+id/actionbarlayot"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <!-- Action Bar End -->

            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                >
                <ImageView android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_action_collections_collection"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/lbl_files"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Files"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/goal_count"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"/>

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="center_vertical"
                    >
                    <EditText
                        android:id="@+id/edt_search"
                        android:inputType="text|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColorHint="#e2e3e3"
                        android:hint="Search Files ot Tag"
                        android:background="@drawable/edt_serach"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/goal_list_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/r1"
                    android:orientation="horizontal">"
                    <LinearLayout
                        android:id="@+id/filename_lbl_layout"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lbl_file_title"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="FileName"
                            android:textColor="#000000"
                            android:textSize="12sp"/>
                        <ImageView android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:src="@drawable/picker_bg"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <!--    <LinearLayout
                           android:id="@+id/lable_file_layout"
                           android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:gravity="center_vertical"
                           android:orientation="horizontal"
                           android:paddingLeft="80dp" >

                           <TextView
                               android:id="@+id/lbl_label_title"
                               android:layout_height="wrap_content"
                               android:layout_width="wrap_content"
                               android:text="Label"
                               android:textColor="#000000"
                               android:textSize="12sp"/>
                           <ImageView android:layout_height="fill_parent"
                               android:layout_width="wrap_content"
                               android:src="@drawable/picker_bg"
                               android:layout_gravity="center_vertical"/>
                       </LinearLayout>
                         <LinearLayout
                           android:id="@+id/date_file_layout"
                           android:layout_height="fill_parent"
                           android:layout_width="fill_parent"
                           android:gravity="right|center_vertical"
                           android:orientation="horizontal">
                           <TextView
                               android:id="@+id/lbl_date_title"
                               android:layout_height="wrap_content"
                               android:layout_width="wrap_content"
                               android:text="Date"
                               android:textColor="#000000"
                               android:textSize="12sp"/>
                           <ImageView android:layout_height="fill_parent"
                               android:layout_width="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:src="@drawable/picker_bg"/>
                       </LinearLayout> -->
                </LinearLayout>


                <LinearLayout android:id="@+id/listfile"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/profile_bg1">
                    <!--    <ListView
                  android:id="@+id/lstfile"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:splitMotionEvents="false"
                   android:fadingEdgeLength="0dp"
                  android:scrollbars="vertical"
                  android:divider="#EFEFEF"
                  android:dividerHeight="1px"
                  /> -->
                    <com.viamhealth.android.ui.RefreshableListView
                        android:layout_width="fill_parent"
                        android:cacheColorHint="#00000000"
                        android:layout_weight="1"
                        android:background="@drawable/profile_bg1"
                        android:divider="#000000"
                        android:dividerHeight="1dp"
                        android:headerDividersEnabled="false"
                        android:footerDividersEnabled="false"
                        android:layout_height="fill_parent"
                        android:listSelector="@drawable/list_item_selector"
                        android:id="@+id/lstfile" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file_mid_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lbl_upload"
                        android:text="Upload"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="11sp"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lbl_share"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/otherbg_toggle"
                        android:textStyle="bold"
                        android:text="Share"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lbl_delete"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/otherbg_toggle"
                        android:text="Delete"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/lbl_download"
                        android:text="Download"
                        android:gravity="center"
                        android:background="@drawable/otherbg_toggle"
                        android:textStyle="bold"
                        android:textSize="11sp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>