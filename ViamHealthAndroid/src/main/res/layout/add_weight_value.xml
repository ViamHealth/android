<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddWeightValue" 
    android:orientation="vertical">
    <FrameLayout 
    android:id="@+id/main_layout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
     <LinearLayout 
        android:id="@+id/actionbarlayot"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
      <!-- Action Bar Start -->
       
	
	  <!-- Action Bar End -->
	    	
  <!-- date layout -->
  <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/inviteuser_header"
        android:gravity="center_vertical">
        
        <TextView android:id="@+id/lbl_add_goal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add Weight Reading"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="#32B5E5"/>
  	 </LinearLayout>
     <LinearLayout
            android:id="@+id/newval_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inviteuser_bg"
           >
 <LinearLayout
            android:id="@+id/newval_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
           
            <LinearLayout android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical">
                <LinearLayout 
                     android:id="@+id/btn_time_picker"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
		                <TextView android:id="@+id/lbl_newval_time"
		                    android:layout_height="wrap_content"
		                    android:layout_width="wrap_content"
		                    android:text="10:45AM"
		                     android:textColor="#000000"
		                    android:textSize="12sp"/>
		                 <ImageView
		                      android:paddingLeft="5dp"
		                        android:layout_height="wrap_content"
		                        android:layout_width="wrap_content"
		                        android:src="@drawable/picker_bg"/>
                 </LinearLayout>
                  <LinearLayout 
                      android:id="@+id/btn_date_picker"
                      android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp">
		       
		                 <TextView android:id="@+id/lbl_newval_date"
		                    android:layout_height="wrap_content"
		                    android:layout_width="wrap_content"
		                    android:text="2013/09/15"
		                     android:textColor="#000000"
		                    android:textSize="12sp"
		                    />
		                 <ImageView 
		                     	android:paddingLeft="5dp"
		                        android:layout_height="wrap_content"
		                        android:layout_width="wrap_content"
		                        android:src="@drawable/picker_bg"
		                       />
                 </LinearLayout>
            </LinearLayout>
            </LinearLayout>
      
  <!-- date layout end -->
  
  <!-- value layout start -->
   <ScrollView 
     android:layout_width="fill_parent"
     android:layout_height="0dp"
	android:layout_weight="1"
     android:splitMotionEvents="false"
     android:fadingEdgeLength="0dp"
     android:layout_gravity="center_horizontal">
  <LinearLayout android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/newval_mid_layout"
            android:layout_width="fill_parent"
            android:orientation="vertical">
			    
						            
						            <LinearLayout android:layout_height="wrap_content"
						                android:layout_width="fill_parent"
						                android:id="@+id/mid_layout">
						                 
							            <LinearLayout 
							                android:id="@+id/newval_submid_layout"
							                android:layout_height="wrap_content"
							                android:layout_width="fill_parent"
							                android:orientation="vertical"
							                android:paddingLeft="10dp"
							                >
							                 
											 <LinearLayout 
							               android:layout_height="wrap_content"
							                android:layout_width="fill_parent"
							                android:orientation="vertical"
							                >		            
								  	      <EditText 
								  	         android:id="@+id/txt_goal_weight"
								  	         android:layout_height="wrap_content"
								  	         android:layout_width="wrap_content"
								  	         android:hint="Current Weight in Kgs"
								  	         android:textSize="15sp"
								  	         android:gravity="center_vertical"
								  	         android:background="@drawable/edt_bg"
								  	         android:singleLine="true"
								  	         android:textColor="#000000"
								  	         android:padding="5dp"/>
								  	      </LinearLayout>
  	                 						<TextView
									                         android:id="@+id/lbl_add_val"
									                         android:layout_width="wrap_content"
									                         android:layout_height="wrap_content"
									                         android:text="Weight Measure"
									                         android:paddingTop="10dp"
									                         android:visibility="gone"
									                         android:textColor="#000000"/>
  	                 						<LinearLayout android:layout_height="wrap_content"
  	                 						    android:layout_width="wrap_content"
  	                 						    android:id="@+id/weigth_measure_layout"
  	                 						    android:visibility="gone">
									                     
									                    </LinearLayout>    
									                
							            </LinearLayout>
			          </LinearLayout>
			      
		       
  </LinearLayout>
  </ScrollView>
  <!-- value layout end -->
  </LinearLayout>
  <!--Button layout start  -->
    <LinearLayout android:id="@+id/newval_btn_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                      
                      
				      <TextView 
				          android:id="@+id/btnCancle"
				          android:layout_width="wrap_content"
			  	         android:layout_height="wrap_content"
			  	         android:background="@drawable/inviteuser_btn_toggle"
			  	         android:gravity="center"
			  	         android:text="Cancel"
			  	         android:textSize="17sp"
			  	         android:textColor="#cdcdcd"
			  	         android:textStyle="bold" />
                <TextView
                          android:id="@+id/btnSave"
                        android:layout_height="wrap_content"
			  	         android:layout_width="wrap_content"
			  	         android:text="Add"
			  	         android:textColor="#cdcdcd"
			  	         android:background="@drawable/inviteuser_btn_toggle"
			  	         android:textStyle="bold"
			  	         android:textSize="17sp"
			  	         android:gravity="center"/>
            </LinearLayout>
  <!--Button layout end  -->
    </LinearLayout>

</FrameLayout>
    
</LinearLayout>