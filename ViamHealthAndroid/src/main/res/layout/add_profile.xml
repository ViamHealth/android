<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddProfile"
    android:orientation="vertical"
    android:background="@drawable/inviteuser_bg">

 <FrameLayout 
    android:id="@+id/main_layout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <!-- Action Bar Start -->
    <LinearLayout 
        android:id="@+id/actionbarlayot"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"> 
	     <LinearLayout 
        android:orientation="horizontal"
        android:background="@drawable/top_bar"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|center_horizontal"
    	android:layout_height="wrap_content">
    	<FrameLayout 
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content">
    		
        <LinearLayout 
             android:gravity="center_vertical|center_horizontal"
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="horizontal">
    		    <ImageView 
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:id="@+id/back"
                android:layout_height="wrap_content"/>
    		  
 			
 			
 		    <TextView 
                android:id="@+id/heding_name_food"
                android:textSize="22sp"
                android:gravity="center_vertical|center"
                android:text="Sharat Khurana"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_weight="1"
    			android:layout_height="fill_parent"/>
          
            <LinearLayout
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/person_icon"
                android:src="@drawable/person_icon"
                android:layout_width="wrap_content"
    			android:layout_height="fill_parent"/>
            </LinearLayout>

            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <LinearLayout
                android:id="@+id/menu_invite_food"
               
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">

            <ImageButton
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_icon" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_invite_out_food"
                android:visibility="invisible"
             
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_icon" />

            </LinearLayout>
            </RelativeLayout>
                        
                        
                        
        </LinearLayout>
        </FrameLayout>
        </LinearLayout>
	  <!-- Action Bar End -->
	 <!-- header layout start -->
	 <LinearLayout 
	    android:id="@+id/profile_txt_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
    	<TextView 
    	    android:gravity="left|center_vertical"
    	    android:textColor="#000000"
    	    android:textSize="20dp"
    	    android:textStyle="bold"
    	    android:layout_width="wrap_content"
    	    android:layout_height="fill_parent"
    	    android:text="Profile "
    	   
    	    android:id="@+id/lbl_Profile"/>
    		
    	   
    	    <TextView
    	    android:clickable="true"
    	    android:id="@+id/Add_profile"
    	    android:gravity="right"
    	    android:textSize="20dp"
    	    android:text="+ Add a Profile"
         	android:textStyle="bold"
         	android:textColor="#2F9ACE" 
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"/>
    	    	
    </LinearLayout>
	 <!-- header layout end -->

	<!-- profile heading layout  start-->
	 <LinearLayout 
        android:id="@+id/profile_heading_layout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/r1">
            <TextView 
                android:id="@+id/profile_heading"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="Profile Details (You)"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
	<!-- profile heading layout end -->
	
	<!-- Profile mid layout start -->
	 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
	  android:splitMotionEvents="false"
     android:fadingEdgeLength="0dp"
     android:layout_gravity="center_horizontal">
	 <ScrollView 
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1"
	  android:splitMotionEvents="false"
     android:fadingEdgeLength="0dp"
     android:layout_gravity="center_horizontal">
	 <LinearLayout 
        android:id="@+id/profile_mid_layout"
        android:layout_height="0dp"
		android:layout_weight="1"
	    android:layout_width="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:id="@+id/profile_submid_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/profile_bg1"
            android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
            	<LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/l1"
                >
            
            	<ImageView android:layout_height="wrap_content"
            	    android:layout_width="wrap_content"
            	    android:src="@drawable/profile_photo"/>
            	</LinearLayout>
            	<LinearLayout android:layout_height="wrap_content"
            	    android:layout_width="wrap_content"
            	    android:padding="10dp"
            	    android:id="@+id/l2"
            	    android:layout_gravity="center_vertical">
            	<ImageView android:layout_height="wrap_content"
            	    android:layout_width="wrap_content"
            	    android:src="@drawable/add_photo"
            	    android:id="@+id/add_photo"
            	    android:layout_gravity="center_vertical"/>
            	<TextView android:layout_height="wrap_content"
            	    android:layout_width="wrap_content"
            	    android:text="Add Photo"
            	    android:paddingLeft="10dp"
            	    android:textColor="#444444"
            	    android:textSize="18dp"
            	    android:layout_gravity="center_vertical"
            	    android:textStyle="bold"/>
            	</LinearLayout>
            </LinearLayout>
            
          	<EditText android:id="@+id/first_name"
          	    android:layout_height="wrap_content"
          	    android:layout_width="fill_parent"
          	    android:background="@drawable/edt_bg"
          	    android:paddingLeft="5dp"
          	     android:singleLine="true"
          	    android:hint="First Name"/>
          	  <LinearLayout 
          	        android:id="@+id/last_name_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		             >
		          	<EditText android:id="@+id/last_name"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	   android:singleLine="true"
		          	    android:hint="Last Name"/>
          	  </LinearLayout>
          	   <LinearLayout 
          	        android:id="@+id/sex_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            >
		          	<EditText android:id="@+id/sex_name"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	    android:hint="Sex"
		          	     android:singleLine="true"/>
          	  </LinearLayout>
          	   <LinearLayout 
          	        android:id="@+id/born_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent">
			          <FrameLayout
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent" 
				            android:layout_gravity="center_vertical">

			           <EditText 
				            android:id="@+id/born_on"
			          	    android:layout_height="wrap_content"
			          	    android:layout_width="fill_parent"
			          	    android:background="@drawable/edt_bg"
			          	    android:paddingLeft="5dp"
			          	    android:hint="Born On"
			          	    android:enabled="false"
			          	    android:editable="false"
			          	     android:singleLine="true"/>
			        	<LinearLayout 
			          	        android:id="@+id/date_picker_layout"
			          	        android:layout_height="fill_parent"
					            android:layout_width="fill_parent"
					            android:gravity="right|center_vertical"
					           >
			            <ImageView
			               android:id="@+id/date_picker"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:background="@drawable/date_picker"
			                />
			            </LinearLayout>
       			 </FrameLayout>
          	  </LinearLayout>
          	    <LinearLayout 
          	        android:id="@+id/height_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            >
		          	<EditText android:id="@+id/txt_height"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	    android:hint="Height"
		          	    android:singleLine="true"
		          	    android:inputType="numberDecimal"/>
          	  </LinearLayout>
  				<LinearLayout 
          	        android:id="@+id/weight_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            >
		          	<EditText android:id="@+id/txt_weight"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	    android:hint="Weight"
		          	    android:singleLine="true"
		          	    android:inputType="numberDecimal"/>
          	  </LinearLayout>
          	  <LinearLayout 
          	        android:id="@+id/emailid_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            >
		          	<EditText android:id="@+id/txt_profile_emailid"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	    android:hint="Email Id"
		          	    android:singleLine="true"
		          	    android:inputType="textEmailAddress"/>
          	  </LinearLayout>
          	    <LinearLayout 
          	        android:id="@+id/phonenum_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            >
		          	<EditText android:id="@+id/txt_phonenum"
		          	    android:layout_height="wrap_content"
		          	    android:layout_width="fill_parent"
		          	    android:background="@drawable/edt_bg"
		          	    android:paddingLeft="5dp"
		          	    android:hint="Phone Number"
		          	    android:singleLine="true"
		          	    android:inputType="number"/>
          	  </LinearLayout>
          	  </LinearLayout>
         </LinearLayout>
         </ScrollView>
         </LinearLayout>
	<!-- Profile mid layout end -->
	<!--Button layout start  -->
	 <LinearLayout android:id="@+id/profile_btn_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                      <Button
                          android:id="@+id/btnSave_profile"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/btn_save_toggle"
                          android:gravity="center_vertical|center"
                          android:text="Save"
                          android:textColor="#ffffff"
                          android:textSize="23sp" />
                      
				      <Button 
				          android:id="@+id/btnCancle_profile"
				          android:layout_height="wrap_content"
	                      android:layout_width="wrap_content"
	                      android:background="@drawable/btn_cancel_toggle"
	                      android:text="Cancel"
	                      android:textColor="#ffffff"
	                      android:textSize="23sp"
	                      android:gravity="center_vertical|center"/>
                
            </LinearLayout>
	<!--Button layout end  -->
</LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/settiglayout_food"
            android:gravity="right"
            android:visibility="invisible"
            android:layout_gravity="right">

            <ListView
                 android:id="@+id/listView1"
                 android:layout_width="210dp"
                 android:layout_height="wrap_content"
                 android:background="#efefef"
                 android:cacheColorHint="#00000000"
 				 android:divider="#00000000"
 				 android:dividerHeight="0dip"/>
         

    <TextView 
        android:text="+ Add Profile" 
        android:id="@+id/lbl_invite_user_food" 
        android:layout_width="210dp" 
        android:layout_height="wrap_content" 
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:padding="10dp" 
        android:textStyle="bold" 
        android:textColor="#4bddfe"
        android:background="@drawable/listinvite" />
   
	    </LinearLayout>
       </FrameLayout>

</LinearLayout>