<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="#37aa4f">

    <LinearLayout
	    android:id="@+id/loginwrapper"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:gravity="right"
	     >

	    	<ImageView
	    	    android:layout_height="wrap_content"
	    	    android:layout_width="wrap_content"
	    	    android:src="@drawable/betaimg"/>
	    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="fill_parent"
    	android:layout_height="0dp">

          <!-- android:paddingBottom="40dp" -->
        <TableLayout
            android:id="@+id/title_table" 
          
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content">
            <TableRow 
                 android:gravity="center_horizontal"
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/original_logo_white"
                        android:layout_width="250dp"
    					android:layout_height="71dp"/>

            </TableRow>
        </TableLayout>
        
        
        <TableLayout 
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content">
            
            <TableRow 
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
         		<EditText 
         		    android:id="@+id/user_name"
         		    android:inputType="text|textNoSuggestions"
         		    android:singleLine="true"
         		    android:paddingLeft="10dp"
         		    android:textSize="18sp"
         		    android:hint="\@email"
         		    android:layout_width="wrap_content"
    				android:layout_height="wrap_content"/>           
                
            </TableRow>
            
            <!-- android:paddingTop="15dp" -->
            <TableRow
                android:id="@+id/password_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
         		<EditText
         		    android:id="@+id/user_password"
         		    android:inputType="textPassword"
         		    android:singleLine="true"
         		    android:paddingLeft="10dp" 
         		    android:textSize="18sp"
         		    android:hint="#password"
         		    android:layout_width="wrap_content"
    				android:layout_height="wrap_content"/>
                
            </TableRow>

            <!-- android:paddingTop="20dp" -->
            <TableRow
                android:id="@+id/login_btn_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
         		<Button
         		    android:id="@+id/login_btn"
         		    android:layout_width="wrap_content"  
    				android:layout_height="wrap_content"
    				android:text="Sign In"
    				android:textSize="20sp"
    				android:textColor="#ffffff"
    				/>           
                
            </TableRow>
            
            <!-- android:paddingTop="15dp"  -->
              <TableRow
                android:id="@+id/sign_up_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
         		<LinearLayout android:layout_height="wrap_content"
         		    android:layout_width="fill_parent"
         		    android:orientation="horizontal"
         		    android:gravity="center_horizontal">
         		<TextView
         		    android:id="@+id/sign_up"
         		     android:layout_width="wrap_content"  
    				android:layout_height="wrap_content"
    				android:text="Register"
    				android:textSize="18sp"/>
    				<TextView
         		     android:layout_width="wrap_content"  
    				android:layout_height="wrap_content"
    				android:text="  |  "
    				android:textSize="18sp"/>
                <TextView
         		    android:id="@+id/forgot_password"
         		     android:layout_width="wrap_content"  
    				android:layout_height="wrap_content"
    				android:text="Forgot Password"
    				android:textSize="18sp"/>
    				</LinearLayout>  
            </TableRow>
            
         </TableLayout>
         
    </LinearLayout>
    
    
    <!-- android:paddingBottom="30dp" -->
    
	
</LinearLayout>