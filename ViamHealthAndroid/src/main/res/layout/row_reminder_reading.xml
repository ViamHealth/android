<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reminder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_icon_medicine"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:duplicateParentState="true"
                android:text="Crocin 500mg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/row_textcolor_selector" />

            <TextView
                android:id="@+id/txtViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:duplicateParentState="true"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/row_textcolor_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/completeLayout"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/completeCheck"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center|right"
                android:background="@drawable/medicine_check_checked_selector"
                android:duplicateParentState="true">

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/medicineLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:duplicateParentState="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/morningLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/morningCheck"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/medicine_check_checked_selector"
                android:duplicateParentState="true">

                <TextView
                    android:id="@+id/mornCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:duplicateParentState="true"
                android:text="@string/morning"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/row_textcolor_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/noonCheck"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/medicine_check_unchecked_selector"
                android:duplicateParentState="true">

                <TextView
                    android:id="@+id/noonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:duplicateParentState="true"
                android:text="@string/noon"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/row_textcolor_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nightLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/nightCheck"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/medicine_check_amber_selector"
                android:duplicateParentState="true">

                <TextView
                    android:id="@+id/nightCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:duplicateParentState="true"
                android:text="@string/night"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/row_textcolor_selector" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>