<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:id="@+id/main_layout"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/inviteuser_header"
        android:gravity="center_vertical">
        
        <TextView android:id="@+id/lbl_add_reminder"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add Reminder"
            android:textSize="25sp"
            android:textColor="#32B5E5"/>
  	 </LinearLayout>
 <LinearLayout
  	     android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:background="#F3F3F3"
  	     android:orientation="vertical" 
  	    >
  	 <LinearLayout
  	     android:id="@+id/middle_layout"
  	     android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:orientation="vertical" 
  	     android:gravity="center" >

  	     <EditText
  	         android:id="@+id/txt_reminder_name"
  	         android:layout_width="fill_parent"
  	         android:layout_height="wrap_content"
  	         android:background="@drawable/edt_bg"
  	         android:hint="Reminder"
  	         android:singleLine="true"
			/>
  	    <LinearLayout 
          	        android:id="@+id/time_layout"
          	        android:layout_height="wrap_content"
		            android:layout_width="fill_parent">
			          <FrameLayout
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent" 
				            android:layout_gravity="center_vertical">

			           <EditText 
				            android:id="@+id/reminder_when"
			          	    android:layout_height="wrap_content"
			          	    android:layout_width="fill_parent"
			          	    android:background="@drawable/edt_bg"
			          	    android:hint="When"
			          	    android:enabled="false"
			          	    android:editable="false"
			          	     android:singleLine="true"/>
			        	<LinearLayout 
			          	        android:id="@+id/date_picker_layout"
			          	        android:layout_height="fill_parent"
					            android:layout_width="fill_parent"
					            android:gravity="right|center_vertical"
					           >
			            <ImageView
			               android:id="@+id/date_picker"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:background="@drawable/date_picker"
			                />
			            </LinearLayout>
       			 </FrameLayout>
          	  </LinearLayout>
  	   </LinearLayout>
  </LinearLayout>
  	  	<!--Button layout start  -->
	 <LinearLayout android:id="@+id/reminder_btn_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:background="#F3F3F3"
                android:gravity="center_horizontal">

                     <Button
                         android:id="@+id/btnSave_reminder"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/btn_save_toggle"
                         android:gravity="center_vertical|center"
                         android:text="Save"
                         android:textColor="#ffffff"
                         android:textSize="20sp" />
                      
				      <Button 
				          android:id="@+id/btnCancle_reminder"
				          android:layout_height="wrap_content"
	                      android:layout_width="wrap_content"
	                      android:background="@drawable/btn_cancel_toggle"
	                      android:text="Cancel"
	                      android:textColor="#ffffff"
	                      android:textSize="20sp"
	                      android:gravity="center_vertical|center"/>
                
            </LinearLayout>
	<!--Button layout end  -->
</LinearLayout>
  	 

</LinearLayout>