<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:accordion="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NewProfile">

    <LinearLayout
        android:id="@+id/llbuttons"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/save"
            android:id="@+id/btnSave_profile"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/svmain"
        android:layout_above="@+id/llbuttons">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/layout_border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical|center_horizontal">

            <com.facebook.widget.ProfilePictureView
                android:id="@+id/profilepic"
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:layout_weight="1"
                facebook:preset_size="large"
                facebook:is_cropped="true"
                android:layout_gravity="center"
                android:visibility="gone"
                android:foregroundGravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/profilepiclocal"
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:visibility="gone"
                android:foregroundGravity="center_vertical|center_horizontal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnUpload"
                android:layout_gravity="right|bottom"
                android:src="@drawable/ic_action_upload" />

        </FrameLayout>

        <com.viamhealth.android.ui.AccordinLayout
            android:id="@+id/accordion_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            accordion:header_layout_fold_button_id="@id/foldButton"
            accordion:header_layout_id="@layout/accordion_header"
            accordion:header_layout_label_id="@id/foldText"
            accordion:section_bottom="@layout/accordion_footer"
            accordion:section_container="@layout/accordion_section"
            accordion:section_container_parent="@id/section_content"
            accordion:section_headers="@array/accordion_profile_sections"
            accordion:section_visibility="@array/accordion_profile_visibility"
            android:orientation="vertical">
            <!-- accordion:header_layout_fold_button_id="@id/foldButton" -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal">

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email"
                        android:ems="15"
                        android:id="@+id/profile_email"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:editable="true"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/profile_phone"
                        android:layout_gravity="center"
                        android:hint="@string/phone"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="@string/first_name"
                        android:ems="15"
                        android:id="@+id/profile_first_name"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:editable="true"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="@string/last_name"
                        android:ems="15"
                        android:id="@+id/profile_last_name"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/profile_img_male"
                            android:src="@drawable/ic_men_enabled"
                            android:background="#ffffff"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/profile_img_female"
                            android:src="@drawable/ic_woman_disabled"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/profile_dob"
                        android:layout_gravity="center"
                        android:hint="@string/dob"
                        android:gravity="center_vertical|center_horizontal" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_relation"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:spinnerMode="dropdown"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical|center_horizontal" />
<!--
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/input_height"
                        android:layout_gravity="center"
                        android:inputType="numberDecimal"
                        android:hint="@string/profile_height"
                        android:gravity="center_horizontal" />
                        -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:id="@+id/feet_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="Height  "
                            android:textSize="18sp"/>

                        <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/feet"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_save_toggle"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/feet_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="feet" />
                        <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/inches"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_save_toggle"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/inches_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="inch" />
                        <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/cms"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:background="@drawable/btn_save_toggle"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/input_total_cholesterol"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="cm" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:id="@+id/feet_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="Weight  "
                            android:textSize="18sp"/>

                        <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/kgs"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:background="@drawable/btn_save_toggle"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/feet_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="kgs    " />
                        <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/grams"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@drawable/btn_save_toggle"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/inches_text"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="grams" />

                    </LinearLayout>


<!--
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/input_weight"
                        android:layout_gravity="center"
                        android:hint="@string/profile_weight"
                        android:gravity="center_horizontal" />
-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_systolic"
                    android:layout_gravity="center"
                    android:hint="@string/present_systolic"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_diastolic"
                    android:layout_gravity="center"
                    android:hint="@string/present_diastolic"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_fasting"
                    android:layout_gravity="center"
                    android:hint="@string/present_fbs"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_random"
                    android:layout_gravity="center"
                    android:hint="@string/present_rbs"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_hdl"
                    android:layout_gravity="center"
                    android:hint="@string/present_hdl"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_ldl"
                    android:layout_gravity="center"
                    android:hint="@string/present_ldl"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_tryglecerides"
                    android:layout_gravity="center"
                    android:hint="@string/present_tryglecerides"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/input_total_cholesterol"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="Total Cholesterol" />

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_blood_group"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    android:entries="@array/blood_groups"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical|center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_location"
                    android:layout_gravity="left|center_vertical"
                    android:hint="@string/location"
                    android:gravity="center_vertical|center_horizontal" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_organization"
                    android:layout_gravity="center"
                    android:hint="@string/organization"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

        </com.viamhealth.android.ui.AccordinLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>
