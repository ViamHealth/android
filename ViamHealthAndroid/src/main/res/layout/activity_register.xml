<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="#37aa4f">

    <LinearLayout
        android:id="@+id/loginwrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        >

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/betaimg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <!-- android:paddingBottom="40dp" -->
        <TableLayout
            android:id="@+id/title_table"

            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/original_logo_white"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:layout_column="1" />

            </TableRow>
        </TableLayout>


        <TableLayout
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/user_name"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:hint="\@email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <!-- android:paddingTop="15dp" -->
            <TableRow
                android:id="@+id/password_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/user_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:hint="#password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>



            </TableRow>

            <!-- android:paddingTop="15dp" -->
            <TableRow
                android:id="@+id/confirm_password_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/confirm_user_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:hint="#password - confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>



            </TableRow>

            <!-- android:paddingTop="15dp"  -->

<!--    Area for Terms and Conditions        <TableRow
                android:id="@+id/sign_up_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:textSize="18sp"

                        android:textColor="#ffffff"/>
                </LinearLayout>
            </TableRow> -->

            <!-- android:paddingTop="20dp" -->
            <TableRow
                android:id="@+id/register_btn_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    />

            </TableRow>

            <!-- android:paddingTop="20dp" -->
            <TableRow
                android:id="@+id/register_cancel_btn_row"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtbtnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="20sp"
                    android:layout_column="0"
                    android:gravity="center_horizontal"/>
            </TableRow>


        </TableLayout>

    </LinearLayout>


    <!-- android:paddingBottom="30dp" -->


</LinearLayout>