<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".FoodDiary" 
    android:orientation="vertical"
    android:background="#EFEFEF" >
  <FrameLayout 
    android:id="@+id/main_layout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
     <LinearLayout 
        android:id="@+id/actionbarlayot"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
      <!-- Action Bar Start --> 
       <LinearLayout 
        android:orientation="horizontal"
        android:background="@drawable/top_bar"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|center_horizontal"
    	android:layout_height="wrap_content">
    	<FrameLayout 
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content">
    		
        <LinearLayout 
             android:gravity="center_vertical|center_horizontal"
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="horizontal">
    		    <ImageView 
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:id="@+id/back"
                android:layout_height="wrap_content"/>
    		  
 			
 			
 		    <TextView 
                android:id="@+id/heding_name_food"
                android:textSize="22sp"
                android:gravity="center_vertical|center"
                android:text="Sharat Khurana"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_weight="1"
    			android:layout_height="fill_parent"/>
          
            <LinearLayout
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
            <ImageView 
                android:src="@drawable/person_icon"
                android:layout_width="wrap_content"
    			android:layout_height="fill_parent"/>
            </LinearLayout>

            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <LinearLayout
                android:id="@+id/menu_invite_food"
               
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">

            <ImageButton
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_icon" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_invite_out_food"
                android:visibility="invisible"
             
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_icon" />

            </LinearLayout>
            </RelativeLayout>
                        
                        
                        
        </LinearLayout>
        </FrameLayout>
        </LinearLayout>
     <LinearLayout
        android:id="@+id/addfood_main_layout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
      
      >

        <LinearLayout
            android:id="@+id/add_heding"
           android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
           >

           <TextView 
               android:id="@+id/lbl_add_food"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="Add "
               android:textStyle="bold"
               android:textColor="#000000"
               android:textSize="17sp"/>
            <TextView 
               android:id="@+id/lbl_add_food_name"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="Breakfast"
               android:textStyle="bold"
               android:textColor="#000000"
               android:textSize="17sp"/>
          <LinearLayout android:layout_height="wrap_content"
    	        android:layout_width="fill_parent"
    	        android:gravity="center_vertical|right"
    	        android:layout_gravity="center_vertical"
    	       >
    	        <EditText 
         		    android:id="@+id/edt_add_food_search"
         		    android:inputType="text|textNoSuggestions"
         		    android:singleLine="true"
         		    android:textColor="#000000"
         		    android:textSize="18sp"
         		    android:paddingLeft="5dp"
         		    android:gravity="center_vertical"
         		    android:textColorHint="#e2e3e3"
         		    android:hint="Search Files"
         		    android:background="@drawable/edt_serach"
         		    android:layout_width="wrap_content"
    				android:layout_height="wrap_content"/>
    	    </LinearLayout>
        </LinearLayout>
        
        
         <LinearLayout android:id="@+id/header_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/r1"
                android:gravity="center_vertical">
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                
               >
                <ImageView 
                    android:id="@+id/food_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/blackadd_food"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="All Foods "
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                     android:textColor="#000000"
                    android:textStyle="bold"/>
                  <TextView 
                     android:id="@+id/addfood_count"
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" (0)"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                     android:textColor="#000000"
                    android:textStyle="bold"/>
                
            </LinearLayout>
             <LinearLayout android:layout_height="wrap_content"
                     android:layout_width="fill_parent"
                     android:gravity="center_vertical"
                    >
                      <ImageButton android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:background="@drawable/nevigation"
                          android:id="@+id/img_prev"/>
                      <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:orientation="horizontal">
                          <TextView android:id="@+id/txt1"
                              android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                             android:text="ALL"
                             android:gravity="center"
                            android:textStyle="bold"
                             android:textColor="#000000"/>
                           <TextView android:id="@+id/txt2"
                              android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="A"
                             android:textStyle="bold"
                             android:textColor="#000000"/>
                             <TextView android:id="@+id/txt3"
                              android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="B"
                           
                             android:textStyle="bold"
                             android:textColor="#000000"/>
                               <TextView android:id="@+id/txt4"
                              android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="C"
                           
                             android:textStyle="bold"
                             android:textColor="#000000"/>
                                 <TextView android:id="@+id/txt5"
                              android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="D"
                           
                             android:textStyle="bold"
                             android:textColor="#000000"/>
                                   <TextView android:id="@+id/txt6"
                              android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="E"
                           
                             android:textStyle="bold"
                             android:textColor="#000000"
                            />
                                     <TextView android:id="@+id/txt7"
                              android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="F"
                           
                             android:textStyle="bold"
                             android:textColor="#000000"
                              />
                                       <TextView android:id="@+id/txt8"
                              android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                             android:text="G"
                             android:textStyle="bold"
                             android:textColor="#000000"/>
                      </LinearLayout>
                      <ImageButton android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:background="@drawable/nevidation1"
                          android:id="@+id/img_next" />
                 </LinearLayout>
            </LinearLayout>
        <LinearLayout 
            android:id="@+id/food_header"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#5299C7"
            android:gravity="center_vertical">
             <TextView 
                     android:id="@+id/food_search_name"
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                     android:textColor="#ffffff"
                    android:textStyle="bold"/>
           
        </LinearLayout> 
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/r2">
	                 <com.viamhealth.android.ui.RefreshableListView
					    android:layout_width="fill_parent"
					    android:cacheColorHint="#00000000"
					    android:divider="#000000"
					    android:dividerHeight="1dp"
					    android:headerDividersEnabled="false"
				        android:footerDividersEnabled="false"
				        android:layout_height="0dp"
				        android:layout_weight="1"
				        android:listSelector="@drawable/list_item_selector"
		                 android:id="@+id/lstfood"/>
	                 
            </LinearLayout>
        </LinearLayout>
         
         
         
         </LinearLayout>
        
       </LinearLayout>
       
         <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/settiglayout_food"
            android:gravity="right"
            android:visibility="invisible"
            android:layout_gravity="right">

            <ListView
                 android:id="@+id/listView1"
                 android:layout_width="210dp"
                 android:layout_height="wrap_content"
                 android:background="#efefef"
                 android:cacheColorHint="#00000000"
 				 android:divider="#00000000"
 				 android:dividerHeight="0dip"/>
         

    <TextView 
        android:text="+ Add Profile" 
        android:id="@+id/lbl_invite_user_food" 
        android:layout_width="210dp" 
        android:layout_height="wrap_content" 
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:padding="10dp" 
        android:textStyle="bold" 
        android:textColor="#4bddfe"
        android:background="@drawable/listinvite" />
   
	    </LinearLayout>
       </FrameLayout>
       

</LinearLayout>