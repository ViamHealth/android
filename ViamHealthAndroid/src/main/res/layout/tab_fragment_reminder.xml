<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".File"
    android:background="#eeeeee"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <!-- Action Bar Start -->
        <LinearLayout
            android:id="@+id/actionbarlayot"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <!-- Action Bar End -->

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/goal_list_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <LinearLayout android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
                    <!-- Action Bar End -->

                    <LinearLayout
                        android:id="@+id/search_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/lbl_files"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Reminders"
                            android:textSize="20sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center_vertical"/>

                        <LinearLayout android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical|right"
                            android:layout_gravity="center_vertical"
                            >
                            <EditText
                                android:id="@+id/edt_search"
                                android:inputType="text|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:gravity="center_vertical"
                                android:textColorHint="#e2e3e3"
                                android:paddingLeft="5dp"
                                android:visibility="invisible"
                                android:hint="Search Files ot Tag"
                                android:background="@drawable/edt_serach"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/goal_list_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:orientation="horizontal">
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:background="@drawable/normaltab_toggle"
                                android:text="Reminders"
                                android:textColor="#000000"
                                android:id="@+id/txt_reminder"
                                android:layout_weight="1"
                                android:gravity="center"/>
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:background="@drawable/normaltab_toggle"
                                android:text="Medicines"
                                android:id="@+id/txt_medication"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:gravity="center"/>
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:background="@drawable/normaltab_toggle"
                                android:text="Rest All"
                                android:textColor="#000000"
                                android:id="@+id/txt_test"
                                android:layout_weight="1"
                                android:gravity="center"/>




                        </LinearLayout>
                    </LinearLayout>






                    <!--    For Reminder section layout-->
                    <LinearLayout android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:splitMotionEvents="false"
                        android:fadingEdgeLength="0dp"
                        android:id="@+id/reminder_scrl"
                        android:gravity="right"
                        android:visibility="visible">
                        <LinearLayout android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:id="@+id/reminder_layout">


                            <ScrollView android:layout_height="fill_parent"
                                android:layout_width="fill_parent"
                                android:orientation="vertical">
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical">

                                    <LinearLayout android:layout_height="fill_parent"
                                        android:layout_width="fill_parent"
                                        android:layout_gravity="right"
                                        android:gravity="right">

                                        <android.support.v4.view.ViewPager
                                            android:id="@+id/pager1"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_gravity="right"
                                            android:gravity="right"
                                            android:background="#eeeeee"/>

                                    </LinearLayout>
                                    <!--
                                       <com.viamhealth.android.ui.RefreshableListView
                                            android:layout_width="fill_parent"
                                            android:cacheColorHint="#00000000"
                                            android:divider="#000000"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="10dp"
                                            android:dividerHeight="1dp"
                                            android:headerDividersEnabled="false"
                                            android:footerDividersEnabled="false"
                                            android:layout_height="200dp"
                                            android:listSelector="@drawable/list_item_selector"
                                            android:id="@+id/lstReminderMedicine" />
                                -->
                                    <Button  android:id="@+id/add_medicine_reminder"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Add Details"
                                        android:gravity="center_vertical|center"
                                        android:textColor="#ffffff"
                                        android:textSize="18sp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:background="@drawable/btn_save_toggle"
                                        android:textStyle="bold"
                                        android:visibility="gone" />
                                </LinearLayout>


                            </ScrollView>




















                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:visibility="gone">
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/r1">
                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Tests"
                                        android:padding="5dp"
                                        android:textColor="#000000"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r2"
                                android:visibility="gone">
                                <!--<com.viamhealth.android.ui.RefreshableListView
                                    android:layout_width="fill_parent"
                                    android:cacheColorHint="#00000000"
                                    android:divider="#000000"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:dividerHeight="1dp"
                                    android:headerDividersEnabled="false"
                                    android:footerDividersEnabled="false"
                                    android:layout_height="200dp"
                                    android:listSelector="@drawable/list_item_selector"
                                    android:id="@+id/lstReminderTest"
                                    />-->
                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="20dp"
                                    android:background="#ffffff"
                                    android:id="@+id/lstReminderTest"/>

                            </LinearLayout>
                            <Button  android:id="@+id/add_test_reminder"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Add Reminder"
                                android:gravity="center_vertical|center"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:background="@drawable/btn_save_toggle"
                                android:textStyle="bold"
                                android:visibility="gone"/>

                        </LinearLayout>
                    </LinearLayout>
                    <!-- Reminder section layout end -->

                    <!-- Medicine section layout end -->
                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:splitMotionEvents="false"
                        android:fadingEdgeLength="0dp"
                        android:visibility="gone"
                        android:id="@+id/medicine_scrl">
                        <LinearLayout android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:id="@+id/medical_layout">
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r1"
                                android:visibility="gone">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Medicines"
                                    android:padding="5dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"/>
                            </LinearLayout>



                            <!--
                           <android.support.v4.view.ViewPager
                                android:id="@+id/pager"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_weight="1"
                                /> -->
                            <ScrollView android:layout_height="fill_parent"
                                android:layout_width="fill_parent"
                                android:orientation="vertical">
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r1">

                                <LinearLayout android:layout_height="fill_parent"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/r1">
<!--
                                    <com.viamhealth.android.ui.RefreshableListView
                                        android:layout_width="fill_parent"
                                        android:cacheColorHint="#00000000"
                                        android:divider="#000000"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:dividerHeight="1dp"
                                        android:headerDividersEnabled="false"
                                        android:footerDividersEnabled="false"
                                        android:layout_height="wrap_content"
                                        android:listSelector="@drawable/list_item_selector"
                                        android:id="@+id/lstReminderMedicine" /> -->
                                    <FrameLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:layout_margin="20dp"
                                        android:background="#ffffff"
                                        android:id="@+id/lstReminderMedicine"/>

                                </LinearLayout>

                                <Button  android:id="@+id/add_medicine"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Add Reminder"
                                    android:gravity="center_vertical|center"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:background="@drawable/btn_save_toggle"
                                    android:textStyle="bold"
                                    android:visibility="gone"/>
                            </LinearLayout>
                     </ScrollView>


                            <!--
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp">
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical">
                                    <Button  android:id="@+id/add_medicine"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Add Reminder"
                                        android:gravity="center_vertical|center"
                                        android:textColor="#ffffff"
                                        android:textSize="18sp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:background="@drawable/btn_save_toggle"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                            -->
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r2"
                                android:visibility="gone">
                                <!--
                                <com.viamhealth.android.ui.RefreshableListView
                                    android:layout_width="fill_parent"
                                    android:cacheColorHint="#00000000"
                                    android:divider="#000000"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:dividerHeight="1dp"
                                    android:headerDividersEnabled="false"
                                    android:footerDividersEnabled="false"
                                    android:layout_height="200dp"
                                    android:listSelector="@drawable/list_item_selector"
                                    android:id="@+id/lstReminderTest" />-->
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:background="#ffffff"
                                android:id="@+id/lstReminderTest"/>



                        </LinearLayout>
                    </LinearLayout>
                    <!-- Medicine section layout end -->






                    <!-- Test section layout end -->
                    <ScrollView android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:splitMotionEvents="false"
                        android:fadingEdgeLength="0dp"
                        android:visibility="gone"
                        android:id="@+id/test_scrl">
                        <LinearLayout android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:id="@+id/test_layout">
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r1">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Tests"
                                    android:padding="5dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:background="@drawable/r2">
                                <!--
                                <com.viamhealth.android.ui.RefreshableListView
                                    android:layout_width="fill_parent"
                                    android:cacheColorHint="#00000000"
                                    android:divider="#000000"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:dividerHeight="1dp"
                                    android:headerDividersEnabled="false"
                                    android:footerDividersEnabled="false"
                                    android:layout_height="200dp"
                                    android:listSelector="@drawable/list_item_selector"
                                    android:id="@+id/lstRemTest" />-->
                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="20dp"
                                    android:background="#ffffff"
                                    android:id="@+id/lstRemTest"/>

                            </LinearLayout>
                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp">
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical">
                                    <Button  android:id="@+id/add_test"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Add Reminder"
                                        android:gravity="center_vertical|center"
                                        android:textColor="#ffffff"
                                        android:textSize="18sp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:dividerHeight="1dp"
                                        android:background="@drawable/btn_save_toggle"
                                        android:headerDividersEnabled="false"
                                        android:footerDividersEnabled="false"
                                        android:visibility="gone"/>

                                </LinearLayout>
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical"
                                    android:paddingTop="10dp">
                                </LinearLayout>
                                <LinearLayout android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/r2"
                                    android:visibility="gone">
                                    <!--
                                    <com.viamhealth.android.ui.RefreshableListView
                                        android:layout_width="fill_parent"
                                        android:cacheColorHint="#00000000"
                                        android:divider="#000000"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:dividerHeight="1dp"
                                        android:headerDividersEnabled="false"
                                        android:footerDividersEnabled="false"
                                        android:layout_height="200dp"
                                        android:listSelector="@drawable/list_item_selector"
                                        android:id="@+id/lstReminderTest" />-->
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="20dp"
                                    android:background="#ffffff"
                                    android:id="@+id/lstReminderTest"/>


                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                    <!-- Medicine section layout end -->

                    <!-- Test section layout end -->
                    <!-- Test layout end -->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
    <FrameLayout
        android:id="@+id/initial_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/reminder_initial_string"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:textColor="@color/app_green" />

            <Button
                android:id="@+id/add_medi_rem"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:text="@string/set_medi_reminders"
                android:layout_gravity="center"
                style="@style/ButtonReverseTheme" />

            <Button
                android:id="@+id/add_test_rem"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:text="@string/set_others_reminders"
                android:layout_gravity="center"
                style="@style/ButtonReverseTheme" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>