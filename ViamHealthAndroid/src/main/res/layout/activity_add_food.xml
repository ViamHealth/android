<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/header_layout"
        android:layout_height="36dp"
        android:layout_width="fill_parent"
        android:background="@drawable/r1"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/food_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/blackadd_food"
                android:padding="5dp"
                android:layout_gravity="center_vertical" />
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="All Foods "
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/addfood_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=" (0)"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            >
            <ImageButton android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/nevigation"
                android:id="@+id/img_prev"/>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/txt1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="ALL"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView android:id="@+id/txt2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="A"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView android:id="@+id/txt3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="B"

                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView android:id="@+id/txt4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="C"

                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView android:id="@+id/txt5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="D"

                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView android:id="@+id/txt6"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="E"

                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView android:id="@+id/txt7"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="F"

                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView android:id="@+id/txt8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="G"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <ImageButton android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/nevidation1"
                android:id="@+id/img_next" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/food_header"
        android:layout_height="36dp"
        android:layout_width="fill_parent"
        android:background="#37AA4F"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/food_search_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />

    </LinearLayout>
    <com.viamhealth.android.ui.RefreshableListView
        android:layout_width="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:layout_height="fill_parent"
        android:listSelector="@drawable/list_item_selector"
        android:id="@+id/lstfood"/>

</LinearLayout>