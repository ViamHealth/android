<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

        <TextView
            android:id="@+id/task_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/row_textcolor_selector"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/text_systolic_pressure_fake_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Systolic pressure ..."
        android:paddingRight="20dp"
        android:background="@drawable/textfield_focused_holo_light"
        android:textColor="#828282"
        android:textStyle="italic"
        android:singleLine="false"
        android:gravity="center_vertical" />



</LinearLayout>

