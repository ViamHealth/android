<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Download" 
    android:background="#EFEFEF">

<RelativeLayout
    android:id="@+id/detailwrapper"
    android:layout_width="wrap_content"
    android:layout_height="80dp" >

          <RelativeLayout android:id="@+id/headingwrapper"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="5dp">
              <TextView android:id="@+id/lblaccept"
                  android:text="Do you want to download this file?"
                  android:textColor="#000000"
                  android:textSize="16dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"/>
          </RelativeLayout>
          <RelativeLayout android:id="@+id/btnwrapper"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_below="@id/headingwrapper"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="10dp">
              <Button
       android:id="@+id/btnDownload"
       android:layout_width="90dp"
       android:layout_height="30dp"
       android:background="@drawable/btn_save_toggle"
       android:text="Download"
       android:textColor="#414040"
       android:textSize="15dp" />
 	<Button
       android:id="@+id/btnCancle"
       android:layout_width="90dp"
       android:layout_height="30dp"
       android:background="@drawable/btn_cancel_toggle"
       android:text="Cancle"
       android:textColor="#414040"
       android:layout_toRightOf="@id/btnDownload"
       android:layout_marginLeft="5dp"
       android:textSize="15dp" />
          </RelativeLayout>
   
   </RelativeLayout>
</RelativeLayout>