    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:id="@+id/section_present"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/present_values"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/fbs"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/txt_add_present_fbs"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/seekBar_present_fbs"
                android:layout_gravity="center"
                style="@style/SeekBarGreenTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/rbs"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/txt_add_present_rbs"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/seekBar_present_rbs"
                android:layout_gravity="center"
                style="@style/SeekBarGreenTheme" />
        </LinearLayout>

        <EditText
            android:id="@+id/add_goal_present_fbs"
            android:hint="@string/present_fbs"
            android:inputType="numberSigned"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/EditTextReverseTheme"
            android:text="" />

        <EditText
            android:id="@+id/add_goal_present_rbs"
            android:hint="@string/present_rbs"
            android:inputType="numberSigned"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/EditTextReverseTheme" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/goal_settings"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/fbs"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/txt_add_target_fbs"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/seekBar_target_fbs"
                android:layout_gravity="center"
                style="@style/SeekBarGreenTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/rbs"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/txt_add_target_rbs"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/seekBar_target_rbs"
                android:layout_gravity="center"
                style="@style/SeekBarGreenTheme" />
        </LinearLayout>

        <EditText
            android:id="@+id/add_goal_target_fbs"
            android:hint="@string/target_fbs"
            android:inputType="numberSigned"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/EditTextReverseTheme" />

        <EditText
            android:id="@+id/add_goal_target_rbs"
            android:hint="@string/target_rbs"
            android:inputType="numberSigned"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/EditTextReverseTheme"
            android:textIsSelectable="false" />

        <EditText
            android:id="@+id/add_goal_target_date"
            android:hint="target date"
            style="@style/EditTextReverseTheme"
            android:inputType="date"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
