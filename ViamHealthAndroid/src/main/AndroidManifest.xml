<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viamhealth.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="false" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        android:required="false" />
    <uses-permission
    android:name="android.permission.CAMERA"
    android:required="false" />
    <uses-permission
        android:name="android.permission.camera"
        android:required="false" />
    <uses-permission
        android:name="android.permission.camera.autofocus"
        android:required="false" />


    <uses-permission
        android:name="android.permission.FLASHLIGHT"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.CALL_PHONE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name="com.viamhealth.android.Global_Application"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="ViamHealth" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.viamhealth.android.activities.Home"
            android:theme="@style/Reversetheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.viamhealth.android.activities.Login"
            android:screenOrientation="portrait"
            android:theme="@style/Reversetheme"/>
        <activity
            android:name="com.viamhealth.android.activities.TabGroupActivityty"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity android:name="com.viamhealth.android.activities.Profile" >
        </activity>
        <activity android:name="com.viamhealth.android.activities.AddBreakfast" >
        </activity>
        <activity android:name="com.viamhealth.android.activities.AddExercise"
            android:theme="@style/Theme.Sherlock.Green"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity android:name="com.viamhealth.android.activities.oldones.Reminder" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.oldones.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.Register"
            android:theme="@style/Reversetheme"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.UploadFile"
            android:theme="@style/Greentheme" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.Downlaod"
            android:theme="@style/Greentheme"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity
            android:name=".activities.AddReminder"
            android:theme="@style/Greentheme" >
        </activity>
        <activity android:name="com.viamhealth.android.activities.FoodDetail" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.AddTest"
            android:label="@string/title_activity_add_medicaletst"
            android:theme="@style/Greentheme" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.AddMedication"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.NewProfile"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.NewHome"
            android:label="@string/title_activity_new_home" >
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.FBFamilyListActivity"
            android:label="@string/title_activity_fbfamily_list"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.TabActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.AddGoalActivity"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.AddGoalValue"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.AddFoodActivity"
            android:theme="@style/Greentheme">
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.DeleteMedication"
            android:label="@string/title_activity_add_medication"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

    </application>
</manifest>
