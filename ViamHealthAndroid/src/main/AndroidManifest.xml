<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viamhealth.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!-- Required to register a SyncStatusObserver to display a "syncing..." progress indicator. -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <!-- Required to enable our SyncAdapter after it's created. -->
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="false" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        android:required="false" />
    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="false" />
    <uses-permission
        android:name="android.permission.camera"
        android:required="false" />
    <uses-permission
        android:name="android.permission.camera.autofocus"
        android:required="false" />
    <uses-permission
        android:name="android.permission.FLASHLIGHT"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.CALL_PHONE"
        android:required="false" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name="com.viamhealth.android.Global_Application"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="ViamHealth"
        android:theme="@style/Greentheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.viamhealth.android.activities.SplashActivity"
            android:theme="@style/Reversetheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.viamhealth.android.activities.Home"
            android:theme="@style/Reversetheme" />
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.viamhealth.android.activities.ViamhealthAccountAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Reversetheme" />
        <activity
            android:name="com.viamhealth.android.activities.AddExercise"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name="com.viamhealth.android.activities.Register"
            android:theme="@style/Reversetheme"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity android:name="com.viamhealth.android.activities.UploadFile" />
        <activity
            android:name="com.viamhealth.android.activities.Downlaod"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity android:name="com.viamhealth.android.activities.AddReminder" />
        <activity android:name="com.viamhealth.android.activities.FoodDetail" />
        <activity android:name="com.viamhealth.android.activities.NewProfile" />
        <activity android:name="com.viamhealth.android.activities.FBFamilyListActivity" />
        <activity
            android:name="com.viamhealth.android.activities.TabActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name="com.viamhealth.android.activities.AddGoalActivity" />
        <activity android:name="com.viamhealth.android.activities.AddGoalValue" />
        <activity android:name="com.viamhealth.android.activities.AddFoodActivity" />
        <activity
            android:name="com.viamhealth.android.activities.DeleteMedication"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.viamhealth.android.activities.ForgotPassword"
            android:theme="@style/Reversetheme" />

        <service android:name="com.viamhealth.android.services.AuthorizationService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- Sync Related providers and service -->
        <provider
            android:name="com.viamhealth.android.provider.ScheduleProvider"
            android:authorities="com.viamhealth.android.schedule"
            android:exported="true"
            android:label="@string/viamhealth"
            android:syncable="true" />

        <service
            android:name="com.viamhealth.android.services.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync" />
        </service>
        <service
            android:name="com.viamhealth.android.services.NotifyService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
